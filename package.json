{
  "name": "js-yaml-source-map",
  "version": "0.2.0",
  "description": "A sourcemap generator for js-yaml.",
  "license": "MIT",
  "author": "Tomi Chen",
  "type": "module",
  "files": [
    "dist/**/*"
  ],
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "default": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    }
  },
  "types": "./dist/esm/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tctree333/js-yaml-source-map.git"
  },
  "homepage": "https://github.com/tctree333/js-yaml-source-map#readme",
  "bugs": {
    "url": "https://github.com/tctree333/js-yaml-source-map/issues"
  },
  "scripts": {
    "clean": "rm -rf dist",
    "lint": "eslint .",
    "format": "prettier --check .",
    "fix": "prettier --write . && eslint --fix .",
    "build:esm": "tsc -p tsconfig.esm.json",
    "build:cjs": "tsc -p tsconfig.json",
    "build": "npm-run-all clean --parallel build:* && ./fixup.sh",
    "prepare": "husky install",
    "release": "npm run build; release-it"
  },
  "keywords": [
    "yaml",
    "sourcemaps",
    "source-map"
  ],
  "peerDependencies": {
    "js-yaml": "^4.0.0"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.5",
    "@typescript-eslint/eslint-plugin": "^5.16.0",
    "@typescript-eslint/parser": "^5.16.0",
    "eslint": "^8.11.0",
    "eslint-config-prettier": "^8.5.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.7",
    "npm-run-all": "^4.1.5",
    "prettier": "2.6.0",
    "release-it": "^14.13.1",
    "typescript": "^4.6.3"
  },
  "lint-staged": {
    "*.{js,ts,json,yaml,yml,md}": "prettier --write",
    "*.{js,ts}": "eslint --cache --fix"
  }
}
